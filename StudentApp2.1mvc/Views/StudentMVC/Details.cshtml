@model StudentLibrary.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<h2>Student Details</h2>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Student ID</dt>
        <dd class="col-sm-10">@Model.StudentId</dd>
        <dt class="col-sm-2">Roll No</dt>
        <dd class="col-sm-10">@Model.RollNo</dd>
        <dt class="col-sm-2">Full Name</dt>
        <dd class="col-sm-10">@Model.FullName</dd>
        <dt class="col-sm-2">Father Name</dt>
        <dd class="col-sm-10">@Model.FatherName</dd>
        <dt class="col-sm-2">Date of Birth</dt>
        <dd class="col-sm-10">@Model.DOB.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-2">Mobile No</dt>
        <dd class="col-sm-10">@Model.MobileNo</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.EmailId</dd>
        <dt class="col-sm-2">Gender</dt>
        <dd class="col-sm-10">@Model.Gender</dd>
        <dt class="col-sm-2">Department</dt>
        <dd class="col-sm-10">@Model.Department</dd>
        <dt class="col-sm-2">Course</dt>
        <dd class="col-sm-10">@Model.Course</dd>
        <dt class="col-sm-2">City</dt>
        <dd class="col-sm-10">@Model.City</dd>
        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>
        <dt class="col-sm-2">Photo</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.PhotoPath))
            {
                <img src="@($"http://localhost:5298{Model.PhotoPath}")" alt="Student Photo" style="max-width: 200px; max-height: 200px;" />
            }
        
            else
            {
                <p>No photo available</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.StudentId" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>