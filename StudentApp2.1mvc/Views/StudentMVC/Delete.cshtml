@model StudentLibrary.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<h2>Delete Student</h2>

<h3>Are you sure you want to delete this student?</h3>
<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Student ID</dt>
        <dd class="col-sm-10">@Model.StudentId</dd>
        <dt class="col-sm-2">Roll No</dt>
        <dd class="col-sm-10">@Model.RollNo</dd>
        <dt class="col-sm-2">Full Name</dt>
        <dd class="col-sm-10">@Model.FullName</dd>
        <dt class="col-sm-2">Mobile No</dt>
        <dd class="col-sm-10">@Model.MobileNo</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.EmailId</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="StudentId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>