@model List<StudentLibrary.Models.Student>

@{
    ViewData["Title"] = "Student List";

}
<h2>@TempData["Error"]</h2>
<h2 class="text-center my-4">Registered Students</h2>

<div class="container">
    <table class="table table-bordered table-striped table-hover align-middle text-center">
        <thead class="table-dark">
            <tr>
                <th>Roll No</th>
                <th>Full Name</th>
                <th>Father's Name</th>
                <th>DOB</th>
                <th>Mobile</th>
                <th>Email</th>
                <th>Gender</th>
                <th>Department</th>
                <th>Course</th>
                <th>City</th>
                <th>Photo</th>
                <th>Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.RollNo</td>
                    <td>@student.FullName</td>
                    <td>@student.FatherName</td>
                    <td>@student.DOB.ToString("dd-MM-yyyy")</td>
                    <td>@student.MobileNo</td>
                    <td>@student.EmailId</td>
                    <td>@student.Gender</td>
                    <td>@student.Department</td>
                    <td>@student.Course</td>
                    <td>@student.City</td>
                    <td>
                        @if (!string.IsNullOrEmpty(student.PhotoPath))
                        {
                            <img src="@($"http://localhost:5298{student.PhotoPath}")" width="100" />
                            //5298
                        }
                    </td>
                    <td>@student.Address</td>
                    <td>
                        <a href="/StudentMVC/Edit?id=@student.StudentId" class="btn btn-sm btn-warning mb-1">Edit</a>
                        <a href="/StudentMVC/Delete?id=@student.StudentId"
                           class="btn btn-sm btn-danger mb-1"
                           onclick="return confirm('Are you sure you want to delete this student?');">
                            Delete
                        </a>                        
                        <a href="/StudentMVC/Details?id=@student.StudentId" class="btn btn-sm btn-info">Details</a>
                   </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/StudentMVC/Create" class="btn btn-success mt-3">Create New</a>
</div>
